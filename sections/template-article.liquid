{% for block in section.blocks %}
  {% case block.type %}

    {% when "article_title" %}
      <h1 class="">
        {{ article.title }}
      </h1>

    {% when "article_author" %}
      {% if section.settings.enable_author %}
        <small>{{ article.author }}</small>
      {% endif %}

    {% when "article_content" %}
      <p>{{ article.content }}</p>

    {% when "article_published_date" %}
      {% if section.settings.enable_date %}
        <time datetime="{{article.published_at |  date: "%Y-%m-%d"}}">{{ article.published_at | date: format: "on_date" }}</time>
      {% endif %}

    {% when "featured_image" %}
      {% if article.image != blank %}
        <img
          src="{{ article.image.src | img_url: '800x' }}"
          loading="eager"
          alt="{{ article.image.alt }}"
          width="800"
          height="auto" />
      {% else %}
        {% assign placeholder_image = 'lifestyle-1' %}
        {{ placeholder_image | placeholder_svg_tag: 'w-full' }}
      {% endif %}


  {% endcase %}
{% endfor %}


{% schema %}
  {
    "name": "Template Article",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_author",
        "label": "Display Author",
        "default": true
      }, {
        "type": "checkbox",
        "id": "enable_date",
        "label": "Display Date",
        "default": true
      }
    ],
    "blocks": [
      {
        "type": "article_title",
        "name": "Title",
        "limit": 1
      },
      {
        "type": "article_author",
        "name": "Author",
        "limit": 1
      },
      {
        "type": "article_published_date",
        "name": "Published Date",
        "limit": 1
      },
      {
        "type": "featured_image",
        "name": "Thumbnail",
        "limit": 1

      }, {
        "type": "article_content",
        "name": "Content",
        "limit": 1
      }
    ]
  }
{% endschema %}