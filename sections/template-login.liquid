<div class="h-full flex flex-col items-center justify-center py-12 px-6 md:px-4" x-data="{loginForm:true, pwRecoverForm: false}">
  <div x-show="loginForm" class="max-w-md w-full space-y-8">
    <h1 class="text-center text-3xl font-bold mt-6">Sign in to your account</h1>
  </div>
  <div x-show="loginForm" class="w-2/5 mt-8">
    {% form 'customer_login' %}

      {% if form.errors %}
        <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
          <strong class="font-bold">Error!</strong>
          <p class="block md:inline">
            {{ form.errors | default_errors }}
          </p>
        </div>
      {% endif %}
      <div class="email my-2">
        <label for="email_address" class="sr-only">Email address</label>
        <input
          type="email"
          name="customer[email]"
          autocomplete="email"
          placeholder="Email"
          id="email_address"
          class="relative block w-full px-3 py-2 border">
      </div>

      {% if form.password_needed %}
        <div class="password my-2">
          <label for="password" class="sr-only">Password</label>
          <input
            type="password"
            name="customer[password]"
            placeholder="Password"
            id="password"
            class="relative block w-full px-3 py-2 border">
        </div>
      {% endif %}

      <div class="my-2 text-sm">
        <a
          x-on:click="loginForm=false; pwRecoverForm=true;"
          href="#"
          class="underline text-gray-500">Forgot password?</a>
      </div>
      <div>
        <button type="submit" class="submit relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">Sign in</button>
      </div>
    {% endform %}
  </div>
  <div x-show="pwRecoverForm" class="max-w-md w-full space-y-8">
    <div class="max-w-md w-full space-y-8">
      <h1 class="text-center text-3xl font-bold mt-6">Recover password</h1>
    </div>
    <div class="">
      {% form 'recover_customer_password' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block md:inline">
              {{ form.errors | default_errors }}
            </p>
          </div>
        {% endif %}
        <div class="email my-2">
          <label for="email" class="sr-only">Email address</label>
          <input
            type="email"
            name="customer[email]"
            autocomplete="email"
            placeholder="Email"
            id="email"
            class="relative block w-full px-3 py-2 border">
        </div>
        <div>
          <button type="submit" class="submit relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">Recover</button>
        </div>
      {% endform %}
    </div>

    <div class="mt-8 text-sm">
      <a
        href="#"
        x-on:click="loginForm=true; pwRecoverForm=false;"
        class="underline text-gray-500">Back to login</a>
    </div>
  </div>
</div>