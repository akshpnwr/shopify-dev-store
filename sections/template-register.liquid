<div class="h-full flex flex-col items-center justify-center py-12 px-6 md:px-4">
  <div class="max-w-md w-full space-y-8">
    <h1 class="text-center text-3xl font-bold mt-6">Register your account</h1>
  </div>

  <div class="max-w-md w-full space-y-8">
    {% form 'create_customer' %}

      {% if form.errors %}
        <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
          <strong class="font-bold">Error!</strong>
          <p class="block md:inline">
            {{ form.errors | default_errors }}
          </p>
        </div>
      {% endif %}

      <div class="email my-2">
        <label for="first_name" class="sr-only">First name</label>
        <input
          type="text"
          name="customer[first_name]"
          autocomplete="given-name"
          placeholder="First name"
          id="first_name"
          class="relative block w-full px-3 py-2 border">
      </div>

      <div class="email my-2">
        <label for="last_name" class="sr-only">Last name</label>
        <input
          type="text"
          name="customer[last_name]"
          autocomplete="family-name"
          placeholder="Last name"
          id="last_name"
          class="relative block w-full px-3 py-2 border">
      </div>

      <div class="email my-2">
        <label for="dob" class="sr-only">Date Of Birth</label>
        <input
          type="date"
          name="customer[note][DOB]"
          placeholder="Date Of Birth"
          id="dob"
          class="relative block w-full px-3 py-2 border">
      </div>

      <div class="email my-2">
        <label for="email_address" class="sr-only">Email address</label>
        <input
          type="email"
          name="customer[email]"
          autocomplete="email"
          placeholder="Email"
          id="email_address"
          class="relative block w-full px-3 py-2 border">
      </div>

      <div class="password my-2">
        <label for="password" class="sr-only">Password</label>
        <input
          type="password"
          name="customer[password]"
          placeholder="Password"
          id="password"
          class="relative block w-full px-3 py-2 border">
      </div>


      <div>
        <button type="submit" class="submit relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">Sign up</button>
      </div>
    {% endform %}
  </div>


</div>